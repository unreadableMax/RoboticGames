<launch>
	<node name="laserToSonar" pkg="report" type="laser_to_sonar.py"/>

	<node name="cat_dead_reckoning" type="cat_dead_reckoning_sim.py" pkg="cat_mouse_game" args="0.0"/>
	<node name="collision_avoidance_cat" type="col_avoid.py"     pkg="cat_mouse_game" args="cat"/>
	<node name="collision_avoidance_mouse" type="col_avoid.py"     pkg="cat_mouse_game" args="mouse"/>
	<node name="mouse_dead_reckoning" type="mouse_dead_reckoning_sim.py" pkg="cat_mouse_game" args="0.0"/>
	<node name="cat" type="cat.py" pkg="cat_mouse_game"/>
	<node name="mouse" type="mouse.py" pkg="cat_mouse_game"/>
	<node name="record" pkg="rosbag" type="record" args="-O homing_path /p3dx/p3dx/base_pose_ground_truth"/>
	
	<arg name="paused" default="false" />
	<arg name="use_sim_time" default="true" />
	<arg name="gui" default="true" />
	<arg name="headless" default="false" />
	<arg name="debug" default="false" />
	
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="debug" value="$(arg debug)" />
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)" />
		<arg name="use_sim_time" value="$(arg use_sim_time)" />
		<arg name="headless" value="$(arg headless)" />
	</include>
	
	<group ns="/cat">
		<param name="robot_description"
			command="$(find xacro)/xacro.py --inorder '$(find p3dx_description)/urdf/pioneer3dx1.xacro'" />
	
		<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
			respawn="false" output="screen" args="-urdf -param robot_description -model cat -x 0 -y -0 -z 0" />
		
		<rosparam command="load" file="$(find p3dx_control)/config/control.yaml" />
		
		<node name="base_controller_spawner" pkg="controller_manager" type="spawner"
	        args="--namespace=/cat
	        p3dx_joint_publisher
	        p3dx_velocity_controller
	        --shutdown-timeout 3"
	        output="screen"/>
	</group>
	
	<group ns="/mouse">
		<param name="robot_description"
			command="$(find xacro)/xacro.py --inorder '$(find p3dx_description)/urdf/pioneer3dx.xacro'" />

		<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
			respawn="false" output="screen" args="-urdf -param robot_description -model mouse -x -3 -y 3 -z 0" />
		
		<rosparam command="load" file="$(find p3dx_control)/config/control.yaml" />
		
		<node name="base_controller_spawner" pkg="controller_manager" type="spawner"
	        args="--namespace=/mouse
	        p3dx_joint_publisher
	        p3dx_velocity_controller
	        --shutdown-timeout 3"
	        output="screen"/>
	</group>
</launch>
